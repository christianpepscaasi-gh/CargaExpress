<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity"
    android:background="@drawable/background_gradient">

    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Back to Main"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Select Vehicle Type"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioMotorcycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="80"
                android:text="Motorcycle - ₱80"
                android:textColor="@android:color/holo_orange_dark" />

            <RadioButton
                android:id="@+id/radioVan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="150"
                android:text="Van - ₱150"
                android:textColor="@android:color/holo_orange_dark" />

            <RadioButton
                android:id="@+id/radioPickupLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="180"
                android:text="Pickup (Light) - ₱180"
                android:textColor="@android:color/holo_orange_dark" />

            <RadioButton
                android:id="@+id/radioPickupMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="250"
                android:text="Pickup (Medium) - ₱250"
                android:textColor="@android:color/holo_orange_dark" />

            <RadioButton
                android:id="@+id/radioPickupHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="350"
                android:text="Pickup (Heavy) - ₱350"
                android:textColor="@android:color/holo_orange_dark" />
        </RadioGroup>
        <Button
            android:id="@+id/selectButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>